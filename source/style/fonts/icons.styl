@charset 'UTF-8'

@font-face
  font-family 'fontastic'
  font-style normal
  font-weight normal
  src url('~src/assets/fonts/icons/fontastic.eot')
  src url('~src/assets/fonts/icons/fontastic.eot?#iefix') format('embedded-opentype'),
    url('~src/assets/fonts/icons/fontastic.woff') format('woff'),
    url('~src/assets/fonts/icons/fontastic.ttf') format('truetype'),
    url('~src/assets/fonts/icons/fontastic.svg#fontastic') format('svg')

[data-icon]:before
      content attr(data-icon)
    font-family 'fontastic' !important
    font-style normal !important
    font-weight normal !important
    font-variant normal !important
    line-height 1
    speak none
    text-transform none !important
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

[class^='icon-']:before,
[class*=' icon-']:before
    font-family 'fontastic' !important
    font-style normal !important
    font-weight normal !important
    font-variant normal !important
    line-height 1
